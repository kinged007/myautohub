# Example secrets configuration file
# Copy this to secrets.yaml and add your actual secrets
# secrets.yaml is in .gitignore and won't be committed

# API Keys
api_keys:
  openai: "your-openai-api-key-here"
  github: "your-github-token-here"
  slack: "your-slack-webhook-url-here"

# Database credentials (if using external DB)
database:
  username: "your-db-username"
  password: "your-db-password"
  host: "your-db-host"
  port: 5432

# Email settings
email:
  smtp_server: "smtp.gmail.com"
  smtp_port: 587
  username: "your-email@gmail.com"
  password: "your-app-password"

# Third-party service credentials
services:
  aws:
    access_key_id: "your-aws-access-key"
    secret_access_key: "your-aws-secret-key"
    region: "us-east-1"
  
  telegram:
    bot_token: "your-telegram-bot-token"
    chat_id: "your-telegram-chat-id"

# Task-specific secrets
tasks:
  web_scraper:
    user_agent: "MyBot/1.0"
    proxy_url: "http://proxy.example.com:8080"
  
  data_processor:
    encryption_key: "your-encryption-key"
    salt: "your-salt-value"
